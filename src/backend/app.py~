from flask import Flask, render_template, request, session, redirect, url_for
from flask_session import Session
from config import SESSION_CONFIG
from utils import db_connect, verify_password

app = Flask(__name__)

# Настройка сессий из config.py
app.config['SESSION_TYPE'] = SESSION_CONFIG['type']
app.config['SESSION_PERMANENT'] = SESSION_CONFIG['permanent']
app.config['SESSION_FILE_DIR'] = SESSION_CONFIG['file_dir']
Session(app)

# Главная страница
@app.route('/')
def home():
    # Получаем данные из сессии
    user_name = session.get('name', 'Гость')
    role = session.get('role', None)

    # Логика маршрутов в зависимости от роли пользователя
    if role == 'admin':
        return render_template('admin_dashboard.html', user_name=user_name)
    elif role == 'dispatcher':
        return render_template('dispatcher_dashboard.html', user_name=user_name)
    elif role == 'specialist':
        return render_template('specialist_dashboard.html', user_name=user_name)
    elif role == 'executor':
        return render_template('executor_dashboard.html', user_name=user_name)
    elif role == 'customer':
        return render_template('customer_dashboard.html', user_name=user_name)
    else:
        # Если пользователь не авторизован, возвращаем базовую главную страницу
        return render_template('index.html', user_name=user_name)

# Страница входа
@app.route('/login', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        email = request.form['email']
        password = request.form['password']

        # Подключение к базе данных
        with db_connect() as conn:
            cursor = conn.cursor()
            cursor.execute("SELECT id, password_hash, role, name FROM users WHERE email = %s", (email,))
            user = cursor.fetchone()

        # Проверка учетных данных
        if user and verify_password(password, user[1]):
            session['user_id'] = user[0]
            session['role'] = user[2]
            session['name'] = user[3]
            return redirect(url_for('home'))
        else:
            return "Неверный логин или пароль", 401

    return render_template('login.html')

# Выход из системы
@app.route('/logout')
def logout():
    session.clear()
    return redirect(url_for('home'))

if __name__ == '__main__':
    app.run(debug=True, host='0.0.0.0')
